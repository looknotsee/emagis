<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<StackPane prefHeight="600.0" prefWidth="400.0" style="-fx-background-color: #1e3a8a;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="LoginController">
    <children>
        <VBox alignment="CENTER" spacing="25.0" style="-fx-background-color: white; -fx-background-radius: 15;">
            <padding>
                <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
            </padding>
            <children>
                <!-- Logo/Branding Section -->
                <VBox alignment="CENTER" spacing="10.0">
                    <children>
                        <Label text="E-MAGIS" textFill="#2563eb">
                            <font>
                                <Font size="32.0" />
                            </font>
                        </Label>
                        <Label text="XU e-Wallet" textFill="#666666">
                            <font>
                                <Font name="Arial" size="14.0" />
                            </font>
                        </Label>
                        <Label text="Xavier University - Ateneo de Cagayan" textFill="#999999">
                            <font>
                                <Font name="Arial" size="11.0" />
                            </font>
                        </Label>
                    </children>
                </VBox>

                <!-- Welcome Message -->
                <Label text="Welcome back !" textFill="#333333">
                    <font>
                        <Font name="Arial Bold" size="20.0" />
                    </font>
                    <VBox.margin>
                        <Insets top="10.0" />
                    </VBox.margin>
                </Label>

                <!-- Login Form -->
                <VBox spacing="15.0">
                    <children>
                        <!-- ID Number Field -->
                        <VBox spacing="5.0">
                            <children>
                                <Label text="ID Number" textFill="#555555">
                                    <font>
                                        <Font name="Arial" size="13.0" />
                                    </font>
                                </Label>
                                <TextField fx:id="idNumberField" promptText="Enter your ID number" style="-fx-background-color: #f5f5f5; -fx-background-radius: 8; -fx-border-color: #dddddd; -fx-border-radius: 8; -fx-padding: 12;">
                                    <font>
                                        <Font name="Arial" size="14.0" />
                                    </font>
                                </TextField>
                            </children>
                        </VBox>

                        <!-- Password Field -->
                        <VBox spacing="5.0">
                            <children>
                                <Label text="Pin" textFill="#555555">
                                    <font>
                                        <Font size="13.0" />
                                    </font>
                                </Label>
                                <PasswordField fx:id="passwordField" promptText="Input PIN" style="-fx-background-color: #f5f5f5; -fx-background-radius: 8; -fx-border-color: #dddddd; -fx-border-radius: 8; -fx-padding: 12;">
                                    <font>
                                        <Font name="Arial" size="14.0" />
                                    </font>
                                </PasswordField>
                            </children>
                        </VBox>

                        <!-- Error Message Label (Initially Hidden) -->
                        <Label fx:id="errorLabel" textFill="#d32f2f" visible="false" wrapText="true">
                            <font>
                                <Font size="12.0" />
                            </font>
                        </Label>
                    </children>
                    <VBox.margin>
                        <Insets top="10.0" />
                    </VBox.margin>
                </VBox>

                <!-- Forgot Password Link -->
                <HBox alignment="CENTER_RIGHT" prefHeight="22.0" prefWidth="114.0">
                    <children>
                        <Hyperlink fx:id="forgotPasswordLink" alignment="CENTER" text="Forgot Password?" textFill="#2563eb">
                            <font>
                                <Font name="Arial" size="12.0" />
                            </font>
                        </Hyperlink>
                    </children>
                </HBox>

                <!-- Login Button -->
                <Button fx:id="loginButton" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#handleLogin" prefHeight="45.0" style="-fx-background-color: #2563eb; -fx-background-radius: 8; -fx-text-fill: white; -fx-cursor: hand;" text="Login">
                    <font>
                        <Font name="Arial Bold" size="15.0" />
                    </font>
                    <VBox.margin>
                        <Insets top="10.0" />
                    </VBox.margin>
                </Button>

                <!-- Register Section -->
                <HBox alignment="CENTER" spacing="5.0">
                    <children>
                        <Label text="Don't have an account?" textFill="#666666">
                            <font>
                                <Font size="12.0" />
                            </font>
                        </Label>
                        <Hyperlink fx:id="registerLink" text="Register here" textFill="#2563eb">
                            <font>
                                <Font name="Arial Bold" size="12.0" />
                            </font>
                        </Hyperlink>
                    </children>
                    <VBox.margin>
                        <Insets top="5.0" />
                    </VBox.margin>
                </HBox>

                <!-- Footer -->
                <Label text="Digital Payment System tailored for XU-ADC" textFill="#999999">
                    <font>
                        <Font size="10.0" />
                    </font>
                    <VBox.margin>
                        <Insets top="20.0" />
                    </VBox.margin>
                </Label>
            </children>
            <StackPane.margin>
                <Insets bottom="50.0" left="50.0" right="50.0" top="50.0" />
            </StackPane.margin>
        </VBox>
    </children>
</StackPane>
